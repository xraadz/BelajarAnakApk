<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/txt1"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp" />


    <ImageView
        android:id="@+id/img_rogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/abclog" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginRight="34dp"
        android:layout_toEndOf="@+id/img_rogo"
        android:fontFamily="@font/ceows"
        android:text="Belajar \nBangun Datar"
        android:textColor="@color/hitam"
        android:textSize="30sp" />


    <ImageView
        android:id="@+id/img_bentuk"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_below="@+id/img_rogo"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:layout_marginTop="90dp"
        android:src="@drawable/trapesium" />


    <TextView
        android:id="@+id/txt_namabentuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_bentuk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ceows"
        android:text="Trapesium"
        android:textColor="@color/hitam"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_tapBentuk"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/txt_namabentuk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/tap" />

    </RelativeLayout>

</ScrollView>