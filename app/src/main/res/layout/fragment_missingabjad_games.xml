<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundabjad">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_rogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/abclog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/belajarangka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/img_rogo"
            android:fontFamily="@font/ceows"
            android:text="Bermain \nAlfabet"
            android:textColor="@color/hitam"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/img_rogo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_abjad1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/a"
            android:layout_marginStart="20dp"
            android:layout_marginTop="130dp"
            app:layout_constraintTop_toBottomOf="@+id/belajarangka"
            app:layout_constraintEnd_toStartOf="@+id/img_abjad2"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/img_abjad2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/missing"
            android:layout_marginStart="90dp"
            android:layout_marginTop="130dp"
            app:layout_constraintTop_toBottomOf="@+id/belajarangka"
            app:layout_constraintEnd_toStartOf="@+id/img_abjad3"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/img_abjad3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/c"
            android:layout_marginTop="130dp"
            app:layout_constraintTop_toBottomOf="@+id/belajarangka"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/img_abjad4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/d"
            android:layout_marginStart="0dp"
            android:layout_marginTop="130dp"
            app:layout_constraintTop_toBottomOf="@+id/belajarangka"
            app:layout_constraintEnd_toStartOf="@id/img_abjad5"
            app:layout_constraintStart_toEndOf="@id/img_abjad3"/>

        <ImageView
            android:id="@+id/img_abjad5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/e"
            android:layout_marginStart="0dp"
            android:layout_marginTop="130dp"
            app:layout_constraintTop_toBottomOf="@+id/belajarangka"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_abjad4"/>



        <TextView
            android:id="@+id/tekan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/ceows"
            android:text="Huruf apa yang hilang dari \nderetan abjad diatas"
            android:textAlignment="center"
            android:textColor="@color/hitam"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_abjad3" />


        <Button
            android:id="@+id/btn_pilihan2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/b"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/tekan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_pilihan5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/z"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_pilihan2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_pilihan1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/v"
            android:layout_marginTop="50dp"
            android:layout_marginStart="80dp"
            app:layout_constraintTop_toBottomOf="@+id/tekan"
            app:layout_constraintEnd_toStartOf="@+id/btn_pilihan2"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:layout_marginBottom="16dp"
            android:id="@+id/btn_pilihan4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/r"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_pilihan5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_pilihan2" />

        <Button
            android:id="@+id/btn_pilihan3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/v"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/tekan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_pilihan2"/>

        <Button
            android:id="@+id/btn_pilihan6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/r"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_pilihan3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_pilihan5"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>